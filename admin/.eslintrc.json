{
	"root": true,
	"overrides": [
		{
			"files": ["*.ts"],
			"parserOptions": {
				"ecmaVersion": 2020,
				"impliedStrict": true,
				"parser": "babel-eslint",
				"sourceType": "module",
				"createDefaultProgram": true
			},
			"extends": [
				"plugin:@angular-eslint/recommended",
				"eslint:recommended",
				"plugin:@typescript-eslint/eslint-recommended",
				"plugin:@typescript-eslint/recommended",
				"plugin:jsdoc/recommended"
			],
			"env": {
				"browser": true,
				"jquery": true,
				"node": true
			},
			"plugins": ["@typescript-eslint"],
			"settings": {
				"jsdoc": {
					"mode": "typescript"
				}
			},
			"rules": {
				"@typescript-eslint/no-explicit-any": "off",
				"@typescript-eslint/no-unused-vars": "off",
				"@angular-eslint/directive-selector": [
					"error",
					{
						"type": "attribute",
						"prefix": "app",
						"style": "camelCase"
					}
				],
				"@angular-eslint/component-selector": [
					"error",
					{
						"type": "element",
						"prefix": "app",
						"style": "kebab-case"
					}
				],
				"jsdoc/require-param-type": "off",
				"jsdoc/require-returns-type": "off",
				"jsdoc/require-jsdoc": [
					"error",
					{
						"require": {
							"ClassDeclaration": true,
							"MethodDefinition": true
						}
					}
				],
				"jsdoc/tag-lines": [
					"warn",
					"never",
					{
						"startLines": null
					}
				]
			}
		},
		{
			"files": ["*.html"],
			"extends": ["plugin:@angular-eslint/template/recommended"],
			"rules": {}
		},
		{
			"files": ["*.js"],
			"parserOptions": {
				"ecmaVersion": "latest",
				"parser": "babel-eslint"
			},
			"env": {
				"browser": true,
				"es6": true,
				"node": true
			}
		},
		{
			"files": ["*.mjs"],
			"parserOptions": {
				"sourceType": "module",
				"ecmaVersion": "latest",
				"parser": "babel-eslint"
			},
			"env": {
				"es6": true
			}
		}
	]
}
